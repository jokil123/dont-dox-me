{
  "name": "Don't Dox Me",
  "description": "an extension which prevents you from doxing yourself",
  "version": "0.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["hideStart.bundle.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_workers": ["background.bundle.js"]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"]
}
