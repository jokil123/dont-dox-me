{
  "env": {
    "browser": true,
    "es2021": true
  },
  "root": true,

  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "no-console": 1,
    "prefer-const": "off",
    "no-constant-condition": "warn"
  }
}
